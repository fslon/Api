@page "/initdatabase"
@using TourApi.Pages;
@model InitDatabaseModel
@{
    ViewData["Title"] = "Страница пересоздания БД";
}

<h1>Пересоздание БД</h1>

<form method="post" asp-antiforgery="false">
    @Html.AntiForgeryToken()
    <input type="submit" class="btn btn-secondary btn-sm" value="Пересоздать базу данных" />
    <br/>
    @if (Model.IsDatabaseRecreatedSuccessfully)
    {
        <strong>База пересоздана!</strong>
    }
</form>
